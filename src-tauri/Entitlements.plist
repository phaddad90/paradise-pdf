<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Disable App Sandbox (required for file manipulation tools) -->
	<key>com.apple.security.app-sandbox</key>
	<false/>
	
	<!-- Network access for auto-updates -->
	<key>com.apple.security.network.client</key>
	<true/>
	
	<!-- File access for user-selected files (via file picker) -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>
	
	<!-- Hardened Runtime: Allow JIT compilation (required for some JS engines) -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>
	
	<!-- Hardened Runtime: Allow unsigned executable memory (required for Tauri/WebView) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>
	
	<!-- Hardened Runtime: Disable library validation (allows loading Tauri plugins) -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>
</dict>
</plist>
